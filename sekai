let player;
let setumei;
let x2;
let y2;
let xx=[5,60,115,170,225,280,335,390,445,500]
let yy=[5,60,115,170,225,280,335,390]
let player0=0
let player2=10
let player3=[10,65,120,175,230,285,340,395,450,505]
let num=0
let random2=0

function setup() {
  drawsyoki();
}

function drawsyoki(){
  setumei=1;
  createCanvas(600, 445);
  background(220);
  textSize(15)
  fill(255,0,0)
  stroke(255,0,0)
  text("f",565,30)
  text("キ",560,60)
  text("|",565,90)
  text("で",560,120)
  text("操",560,150)
  text("作",560,180)
  text("説",560,210)
  text("明",560,240)
  drawworld(); 
  drawplayer();
}

function keyPressed(){
    if(key=='f'){
     if(setumei==1){ 
       drawsetumei();
    }}
       if(key=='g'){
     if(setumei==2){ 
      drawsyoki();
  }}
      if(key==' '){
       if(setumei==1){
         drawsaikoro()
       }
     }
}

function drawsaikoro(){
if(player2==395&&player0>6){
  player0=9
}
 else{
  num=player0
   random2= floor(random(1,4))
 if(num+random2<10){
    player0=num+random2
 }
  if(num+random2>9){
    player2+=55
    player0=random2-(10-num)
  }
}
console.log(random2)
}

function drawplayer(){
  fill(0)
  stroke(0)
  ellipse(player3[player0],player2,10)  
}

function drawsetumei(){
  setumei=2;
   background(0);
}

function drawworld(){
  x2=150;
  y2=30;  
  drawhuman();
  x2=20;
  y2=80;
  drawteki()
  x2=200
  y2=300
  drawbikkuri()
  x2=330
  y2=50
  drawhome()
}

