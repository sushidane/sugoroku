  drawhumaneach(xx[7],yy[4])
  drawhumaneach(xx[8],yy[4])
  drawhumaneach(xx[4],yy[5])
  drawhumaneach(xx[6],yy[5])
  drawhumaneach(xx[8],yy[5])
  drawhumaneach(xx[9],yy[5])
  drawhumaneach(xx[2],yy[6])
